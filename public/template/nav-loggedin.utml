<div class="container">

  <a class="brand" href="/"><%- config.site %></a>

  <div class="btn-group">
    <button type="button" class="btn btn-small primary" id="post-note-button" title="Post a note">
      <span class="hidden-phone"><%= gettext('Note') %>  </span><i class="icon-pencil"></i>
    </button>
    <% if (config.canUpload) { %>
    <button type="button" class="btn btn-small primary" id="post-picture-button" title="Post a picture">
      <span class="hidden-phone"><%= gettext('Picture') %>  </span><i class="icon-picture"></i>
    </button>
    <% } %>
  </div>

  <ul class="nav pull-right">
    <li id="fat-menu" class="dropdown">
      <a href="#" id="profile-dropdown" role="button" class="dropdown-toggle" data-toggle="dropdown"> 
        <% if (_(principal).has("image")) { %>
        <img class="pull-left img-rounded" src="<%- principal.image.url %>" width="24" height="24" class="img-rounded" />
        <% } else { %>
        <img class="pull-left img-rounded" src="/images/default.png" width="24" height="24" class="img-rounded" />
        <% } %>
        &nbsp;<span class="hidden-phone"><%- principal.displayName %> </span><b class="caret"></b>
      </a>
      <ul class="dropdown-menu" role="menu" aria-labelledby="profile-dropdown">
        <li><a tabindex="-1" href="/<%- principalUser.nickname %>"><%= gettext('Activity') %> </a></li>
        <li><a tabindex="-1" href="/<%- principalUser.nickname %>/favorites"><%= gettext('Favorites') %> </a></li>
        <li><a tabindex="-1" href="/<%- principalUser.nickname %>/followers"><%= gettext('Followers') %> </a></li>
        <li><a tabindex="-1" href="/<%- principalUser.nickname %>/following"><%= gettext('Following') %> </a></li>
        <li><a tabindex="-1" href="/<%- principalUser.nickname %>/lists"><%= gettext('Lists') %> </a></li>
        <li class="divider"></li>
        <li><a tabindex="-1" href="/main/settings"><%= gettext('Settings') %> </a></li>
        <li><a tabindex="-1" href="/main/account"><%= gettext('Account') %> </a></li>
        <li class="divider"></li>
        <li><a tabindex="-1" id="logout" href="#"><%= gettext('Log out') %> </a></li>
      </ul>
    </li>
  </ul>

  <div class="pull-right">
    <%= partial("messages", {messages: messages}) %>
    <%= partial("notifications", {notifications: notifications}) %>
  </div>

</div>
