<div class="person-responses">
  <% if (!principal) { %>
  <p><a href="/main/login" class="btn btn-primary save-continue-to"><%= gettext('Follow') %></a></p>
  <% } else if (principal && principal.id != person.id) {
         if (person.pump_io && person.pump_io.followed) { %>
  <p><a href="#" class="btn stop-following"><%= gettext('Stop following') %></a></p>
  <%     } else { %>
  <p><a href="#" class="btn btn-primary follow"><%= gettext('Follow') %></a></p>
  <%     }
     } %>
</div>
